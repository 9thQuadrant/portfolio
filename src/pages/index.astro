---
import Base from '../layouts/Base.astro';
import Stars from '../components/Stars.astro';
import { experiences, skills, links } from '../data/content';
---

<Base>
  <Stars />

  <!-- Hero -->
  <section class="relative z-10 min-h-screen flex flex-col items-center justify-center px-6 text-center">
    <p class="mono text-xs uppercase tracking-[0.3em] text-blue-400 mb-6 animate-fade-up-delay-1">
      Senior Frontend Engineer
    </p>

    <h1 class="text-6xl md:text-8xl font-black leading-none tracking-tight mb-2 animate-fade-up-delay-2">
      <span class="bg-gradient-to-r from-white via-slate-200 to-slate-300 bg-clip-text text-transparent">
        Phaneendra
      </span>
    </h1>
    <h1 class="text-6xl md:text-8xl font-black leading-none tracking-tight mb-10 animate-fade-up-delay-2">
      <span class="bg-gradient-to-br from-blue-400 via-violet-400 to-violet-600 bg-clip-text text-transparent">
        Kanduri
      </span>
    </h1>

    <p class="text-base md:text-lg text-slate-400 max-w-lg mx-auto mb-4 leading-relaxed animate-fade-up-delay-3">
      8+ years building high-performance frontends. Specialist in performance
      engineering, legacy modernization, and accessibility compliance.
    </p>

    <p class="mono text-xs text-slate-500 mb-10 animate-fade-up-delay-3">
      2s → 0.2s FCP &nbsp;·&nbsp; 20min → 1.5min builds &nbsp;·&nbsp; 30s → 5s load
    </p>

 <p class="mono text-xs text-slate-500 mb-10 animate-fade-up-delay-3">
      Enterprise SaaS &nbsp;·&nbsp; Healthcare &nbsp;·&nbsp; HR Tech
    </p>

    <div class="flex justify-center gap-4 animate-fade-up-delay-4">
      <a href="https://github.com/9thQuadrant" target="_blank" rel="noopener noreferrer" aria-label="GitHub"
        class="icon-link">
        <!-- GitHub icon -->
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>
        </svg>
      </a>
      <a href="https://www.linkedin.com/in/phaneendracharyulu" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn"
        class="icon-link">
        <!-- LinkedIn icon -->
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
          <rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/>
        </svg>
      </a>
      <a href="mailto:phaneendra9q@gmail.com" aria-label="Email"
        class="icon-link">
        <!-- Mail icon -->
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
          <polyline points="22,6 12,13 2,6"/>
        </svg>
      </a>
    </div>

    <div class="absolute bottom-10 left-1/2 animate-bob" aria-hidden="true">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
        class="text-slate-600" stroke-linecap="round" stroke-linejoin="round">
        <line x1="12" y1="5" x2="12" y2="19"/><polyline points="19 12 12 19 5 12"/>
      </svg>
    </div>
  </section>

  <!-- Experience -->
  <section class="relative z-10 py-24 px-6">
    <div class="max-w-2xl mx-auto">
      <p class="mono text-xs uppercase tracking-[0.3em] text-blue-400 mb-14">Experience</p>
      <div class="space-y-14">
        {experiences.map((exp) => (
          <div class="group border-l border-slate-800 pl-6 hover:border-blue-500 transition-colors duration-300">
            <div class="flex flex-wrap justify-between items-start gap-3 mb-4">
              <div>
                <h3 class="text-xl font-bold text-white">{exp.company}</h3>
                <p class="text-blue-400 text-sm mt-0.5">{exp.role}</p>
              </div>
              <div class="text-right">
                <p class="mono text-xs text-slate-500">{exp.period}</p>
                <p class="mono text-xs text-slate-600">{exp.location}</p>
              </div>
            </div>
            <ul class="space-y-2.5">
              {exp.achievements.map((a) => (
                <li class="text-slate-400 text-sm leading-relaxed flex gap-3">
                  <span class="text-slate-700 mt-1.5 shrink-0">–</span>
                  <span>{a}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Skills -->
  <section class="relative z-10 py-24 px-6">
    <div class="max-w-2xl mx-auto">
      <p class="mono text-xs uppercase tracking-[0.3em] text-blue-400 mb-14">Skills</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
        {skills.map((group) => (
          <div class="border border-slate-800 rounded-lg p-5 hover:border-slate-600 transition-colors duration-200">
            <p class="mono text-xs uppercase tracking-widest text-slate-600 mb-3">{group.title}</p>
            <ul class="space-y-1.5">
              {group.items.map((item) => (
                <li class="text-sm text-slate-300">{item}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Links -->
  <section class="relative z-10 py-24 px-6">
    <div class="max-w-2xl mx-auto">
      <p class="mono text-xs uppercase tracking-[0.3em] text-blue-400 mb-14">Around the web</p>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
        {links.map((link) => (
          <a href={link.href} target={link.href !== '#' ? '_blank' : undefined}
            rel="noopener noreferrer"
            class="flex items-center justify-between border border-slate-800 rounded-lg px-5 py-4 hover:border-blue-500 group transition-all duration-200">
            <div>
              <p class="text-sm font-medium text-white group-hover:text-blue-400 transition-colors">{link.label}</p>
              <p class="mono text-xs text-slate-600 mt-0.5">{link.sub}</p>
            </div>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
              class="text-slate-700 group-hover:text-blue-400 transition-colors"
              stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
              <polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/>
            </svg>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="relative z-10 py-10 px-6 text-center border-t border-slate-900">
    <a href="mailto:phaneendra9q@gmail.com"
      class="mono text-xs text-slate-600 hover:text-blue-400 transition-colors">
      phaneendra9q@gmail.com
    </a>
  </footer>
</Base>

<style>
  .icon-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 1px solid rgb(51 65 85); /* slate-700 */
    color: rgb(148 163 184); /* slate-400 */
    transition: border-color 0.2s, color 0.2s;
  }

  .icon-link:hover {
    border-color: rgb(96 165 250); /* blue-400 */
    color: rgb(96 165 250);
  }
</style>
