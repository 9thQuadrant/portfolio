---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Phaneendra Kanduri â€“ Senior Frontend Engineer",
  description = "Senior Frontend Engineer with 8+ years. Specialist in performance engineering, legacy modernization, and accessibility compliance.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Mono:wght@400;500&family=Syne:wght@700;800&family=Inter:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-[#070a0f] text-white antialiased">
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Inter', sans-serif;
  }

  h1, h2, h3 {
    font-family: 'Syne', sans-serif;
  }

  code, .mono {
    font-family: 'DM Mono', monospace;
  }

  @keyframes twinkle {
    0%, 100% { opacity: 0.15; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.3); }
  }

  @keyframes fade-up {
    from { opacity: 0; transform: translateY(24px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  @keyframes fade-in {
    from { opacity: 0; }
    to   { opacity: 1; }
  }

  @keyframes bob {
    0%, 100% { transform: translateY(0) translateX(-50%); }
    50%       { transform: translateY(6px) translateX(-50%); }
  }

  .animate-fade-up {
    animation: fade-up 0.7s ease-out forwards;
  }

  .animate-fade-up-delay-1 { animation: fade-up 0.7s 0.1s ease-out both; }
  .animate-fade-up-delay-2 { animation: fade-up 0.7s 0.2s ease-out both; }
  .animate-fade-up-delay-3 { animation: fade-up 0.7s 0.35s ease-out both; }
  .animate-fade-up-delay-4 { animation: fade-up 0.7s 0.5s ease-out both; }

  .animate-bob {
    animation: bob 2s ease-in-out infinite;
  }
</style>
